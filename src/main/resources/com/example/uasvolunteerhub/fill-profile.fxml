<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="540.0" minWidth="960.0" prefHeight="540.0" prefWidth="960.0" style="-fx-background-color: B2D3C2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uasvolunteerhub.FillProfileController">

    <children>
        <Label layoutX="232.0" layoutY="50.0" prefHeight="66.0" prefWidth="592.0" style="-fx-font-size: 36; -fx-font-weight: bold;" text="Please complete your information" textFill="#216516">
            <font>
                <Font name="SansSerif Bold" size="64.0" />
            </font>
        </Label>

        <Label layoutX="345.0" layoutY="130.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Name" textFill="#216516" />
        <TextField fx:id="nameField" layoutX="343.0" layoutY="160.0" prefHeight="40.0" prefWidth="346.0" promptText="Your Name" style="-fx-background-radius: 12;" />

        <Label layoutX="345.0" layoutY="210.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Email" textFill="#216516" />
        <TextField fx:id="emailField" layoutX="343.0" layoutY="240.0" prefHeight="40.0" prefWidth="346.0" promptText="Your Email" style="-fx-background-radius: 12;" />

        <Label layoutX="345.0" layoutY="290.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Phone Number" textFill="#216516" />
        <TextField fx:id="phoneField" layoutX="343.0" layoutY="320.0" prefHeight="40.0" prefWidth="346.0" promptText="Your Phone Number" style="-fx-background-radius: 12;" />

        <Label layoutX="345.0" layoutY="370.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Date of Birth" textFill="#216516" />
        <DatePicker fx:id="dobPicker" layoutX="343.0" layoutY="400.0" prefHeight="40.0" prefWidth="346.0" style="-fx-background-radius: 12;-fx-border-radius: 12;-fx-padding: 0 5 0 5;-fx-border-color: transparent;" />


        <Button fx:id="saveButton" layoutX="435.0" layoutY="470.0" onAction="#handleSave" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #216516; -fx-background-radius: 50;" text="Save" textFill="WHITE">
            <font>
                <Font name="SansSerif Bold" size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </children>
</AnchorPane>
