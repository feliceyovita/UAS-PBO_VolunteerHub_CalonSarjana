<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uasvolunteerhub.VolunteerHomeController">
    <children>

        <!-- Background ImageView -->
        <ImageView fitHeight="540.0" fitWidth="960.0" onMouseClicked="#onLoginButtonClick" preserveRatio="false">
            <Image url="@/background.jpg" />
        </ImageView>

        <!-- Konten lainnya -->
        <Text fill="WHITE" layoutX="27.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Volunteer">
            <font>
                <Font name="SansSerif Bold Italic" size="14.0" />
            </font>
        </Text>
        <Text fill="#b5d5c4" layoutX="94.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hub">
            <font>
                <Font name="SansSerif Bold Italic" size="14.0" />
            </font>
        </Text>

        <!-- Tulisan VolunteerHub tanpa shadow -->
        <Text fill="WHITE" layoutX="345.0" layoutY="233.0" lineSpacing="2.0" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0" text="VOLUNTEERHUB" wrappingWidth="296.35894775390625">
            <font>
                <Font name="SansSerif Bold" size="35.0" />
            </font>
        </Text>

        <Text fill="WHITE" layoutX="351.0" layoutY="271.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Together, we can make a difference" wrappingWidth="298.0">
            <font>
                <Font name="SansSerif Italic" size="18.0" />
            </font>
        </Text>

        <!-- Tombol Login -->
        <Button fx:id="loginButton" layoutX="373.0" layoutY="294.0" mnemonicParsing="false"
                onMouseClicked="#onLoginButtonClick"
                prefHeight="29.0" prefWidth="90.0"
                style="-fx-background-radius: 50px; -fx-background-color: #216516;"
                text="LOGIN" textFill="WHITE">
            <font>
                <Font name="SansSerif Bold" size="12.0" />
            </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>

        <!-- Tombol Register -->
        <Button fx:id="signUpButton" layoutX="528.0" layoutY="294.0" mnemonicParsing="false"
                onMouseClicked="#onSignUpButtonClick"
                prefHeight="29.0" prefWidth="90.0"
                style="-fx-background-radius: 50px; -fx-background-color: #216516;"
                text="REGISTER" textFill="WHITE">
            <font>
                <Font name="SansSerif Bold" size="12.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

    </children>
</AnchorPane>
