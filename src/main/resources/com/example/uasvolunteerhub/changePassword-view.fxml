<AnchorPane minHeight="540.0" minWidth="960.0" prefHeight="540.0" prefWidth="960.0" style="-fx-background-color: B2D3C2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uasvolunteerhub.changePasswordController">
    <children>
        <Label layoutX="326.0" layoutY="65.0" prefHeight="66.0" prefWidth="326.0" style="-fx-font-size: 40; -fx-font-weight: bold;" text="Reset Password" textFill="#216516">
            <font>
                <Font name="SansSerif Bold" size="64.0" />
            </font>
        </Label>

        <Label layoutX="349.0" layoutY="150.0" prefHeight="34.0" prefWidth="180.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="New Password" textFill="#216516">
            <font>
                <Font name="SansSerif Bold" size="64.0" />
            </font>
        </Label>
        <PasswordField fx:id="newPasswordField" layoutX="343.0" layoutY="192.0" prefHeight="44.0" prefWidth="346.0" promptText="New Password" style="-fx-background-radius: 12;" />

        <Label layoutX="349.0" layoutY="250.0" prefHeight="34.0" prefWidth="180.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Confirm Password" textFill="#216516">
            <font>
                <Font name="SansSerif Bold" size="64.0" />
            </font>
        </Label>
        <PasswordField fx:id="confirmPasswordField" layoutX="343.0" layoutY="290.0" prefHeight="44.0" prefWidth="346.0" promptText="Confirm Password" style="-fx-background-radius: 12;" />

        <Button layoutX="463.0" layoutY="393.0" onAction="#handleChangePassword" prefHeight="23.0" prefWidth="98.0" style="-fx-background-radius: 50; -fx-background-color: #216516;" text="Simpan" textFill="#b2d3c2">
            <font>
                <Font name="SansSerif Bold" size="12.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </children>
</AnchorPane>
