<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="540.0" minWidth="960.0" prefHeight="540.0" prefWidth="960.0" style="-fx-background-color: B2D3C2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uasvolunteerhub.forgotPasswordController">
    <children>
        <!-- Judul -->
        <Label layoutX="260.0" layoutY="50.0" prefHeight="66.0" prefWidth="440.0" style="-fx-font-size: 40; -fx-font-weight: bold;" text="Forgot Your Password?" textFill="#216516">
            <font>
                <Font name="SansSerif Bold" size="48.0" />
            </font>
        </Label>

        <!-- Label Email -->
        <Label layoutX="349.0" layoutY="170.0" prefHeight="34.0" prefWidth="80.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Email" textFill="#216516">
            <font>
                <Font name="SansSerif Bold" size="64.0" />
            </font>
        </Label>

        <!-- TextField Email -->
        <TextField fx:id="emailField" layoutX="343.0" layoutY="205.0" prefHeight="44.0" prefWidth="346.0" promptText="Enter your email" style="-fx-background-radius: 12;" />

        <!-- Tombol Submit -->
        <Button layoutX="450.0" layoutY="270.0" onAction="#handleSend" prefHeight="30.0" prefWidth="120.0" style="-fx-background-radius: 50; -fx-background-color: #216516;" text="Send" textFill="#b2d3c2">
            <font>
                <Font name="SansSerif Bold" size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </children>
</AnchorPane>
